<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hntrip.root.member.mapper.MemberMapper">
	<resultMap type="com.hntrip.root.member.dto.MemberDTO" id="member">
		<id property="id" column="id"/>
		<result property="pwd" column="pwd"/>
		<result property="name" column="name"/>
		<result property="email" column="email"/>
		<result property="no" column="no"/>
	</resultMap> 
	
	<select id="getMember" resultMap="member">
		select * from membership where id = #{id}
	</select>
	<update id="keepLogin">
		update membership set session_id = #{sessionId}, 
								limit_date = #{limitDate}
							where id = #{id}
	</update>
	<insert id="kakaoLogin">
		insert into membership(no,id) values(membership_seq.nextval,#{id})
	</insert>
</mapper>